@model Connecto.BusinessObjects.Supplier
@{
    ViewBag.Title = "Edit";
}
<div class="page-header">
    <h1>Supplier<small><i class="ace-icon fa fa-angle-double-right"></i>Edit following fields</small></h1>
</div>
<div class="row">
    <div class="col-xs-12">
        <form class="form-horizontal" action="@Url.Action("Edit")" method="POST">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.SupplierId)
            @Html.HiddenFor(model => model.Person.PersonId)
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> First Name</label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Person.FirstName, new { @class = "col-xs-10 col-sm-5", @placeholder = "FirstName" })
                    @Html.ValidationMessageFor(model => model.Person.FirstName)
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Last Name</label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Person.LastName, new { @class = "col-xs-10 col-sm-5", @placeholder = "LastName" })
                    @Html.ValidationMessageFor(model => model.Person.LastName)
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Description </label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Person.Description, new { @class = "form-control", @placeholder = "Description" })
                    @Html.ValidationMessageFor(model => model.Person.Description)
                </div>
            </div>
            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        Save
                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <button class="btn" type="reset">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Reset
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<p>
    @Html.ActionLink("New Contact", "CreateContact", new { id = Model.Person.PersonId })
</p>
@Html.Action("Contacts", "Supplier", new { contacts = Model.Person.Contacts })
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

