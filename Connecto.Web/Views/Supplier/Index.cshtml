@model IEnumerable<Connecto.BusinessObjects.Supplier>

@{
    ViewBag.Title = "Suppliers";
}
<h3 class="header smaller lighter red">Supplier List</h3>
<table id="simple-table" class="table table-striped table-bordered table-hover">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Name</th>
        <th>Status</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Person.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.Person.LastName)</td>
            <td>@Html.DisplayFor(modelItem => item.Person.DisplayName)</td>
            <td class="hidden-480"><span class="label label-sm label-warning">Expiring</span></td>
            <td>
                <div class="hidden-sm hidden-xs btn-group">
                    <a class="btn btn-xs btn-info" href="@Url.Action("Edit", "Supplier", new { id = item.SupplierId })"><i class="ace-icon fa fa-pencil bigger-120"></i></a>
                    <a class="btn btn-xs btn-danger" href="@Url.Action("Delete", "Supplier", new { id = item.SupplierId })"><i class="ace-icon fa fa-trash-o bigger-120"></i></a>
                    <a class="btn btn-xs btn-warning" href="@Url.Action("Details", "Supplier", new { id = item.SupplierId })"><i class="ace-icon fa fa-eye bigger-120"></i></a>
                </div>
            </td>
        </tr>
    }
</table>
