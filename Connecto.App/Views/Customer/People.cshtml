@{ Layout = null; }
<div ng-controller="CustomerPeopleCtrl">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
        <tr ng-repeat="item in items">
            <td>{{item.PersonId}}</td>
            <td>{{item.FirstName}} {{item.LastName}}</td>
            <td>
                <div class="hidden-sm hidden-xs btn-group">
                    <button class="btn btn-danger btn-xs" ng-click="assign(item.PersonId)">
                        <i class="ace-icon glyphicon glyphicon-plus icon-only"></i>
                    </button>
                </div>
            </td>
        </tr>
    </table>
</div>

<script type="text/javascript">
    $(function () {
        $('#menu-hr').syncMenu([{ name: "customer", option: "a" }], { title: 'Customers', link: '/Customer' });
    });
</script>