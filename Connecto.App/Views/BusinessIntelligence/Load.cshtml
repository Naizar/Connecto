@model Connecto.App.Models.ReportCriteriaViewModel
@{
    ViewBag.Title = "Connecto - Reports";
}
<form id="form-edit-basic-info" class="form-horizontal" action="@Url.Action("Download")" method="POST">
    <p>
        <div class="widget-box">
            <div class="widget-header">
                <h4 class="widget-title">@Model.ReportTitle</h4>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <div class="form-inline">
                        @foreach (var actionName in Model.RenderControls)
                        {
                            @Html.Partial(string.Format("Criteria/_{0}", actionName), Model)
                        }
                    </div>
                </div>
            </div>
        </div>
        @Html.Partial("_Download", Model)
    </p>
</form>
<script type="text/javascript">
    $('#menu-bi').syncMenu([]);
</script>