@{ Layout = null; }
<div ng-controller="ProductNewCtrl">

        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-top"> Vendor </label>
                        <div class="col-sm-9">
                            <select ng-model="Product.VendorId" id="product-vendor" class="select2" data-placeholder="Click to Choose...">
                                <option></option>
                                <option ng-repeat="item in vendors" value="{{item.VendorId}}">{{item.Name}}</option>
                            </select>

                        </div>
                    </div>
                    <div class="space-6"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-top"> Product Type </label>
                        <div class="col-sm-9">
                            <select ng-model="Product.ProductTypeId" id="product-type" class="select2" data-placeholder="Click to Choose...">
                                <option></option>
                                <option ng-repeat="item in productTypes" value="{{item.ProductTypeId}}">{{item.Type}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="space-6"></div>
                    <div class="hr hr-16 hr-dotted"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-top"> Name </label>
                        <div class="col-sm-9">
                            <input ng-model="Product.Name" type="text" id="form-field-1" placeholder="Product Name" class="col-xs-10 col-sm-5">
                        </div>
                    </div>
                    <div class="space-6"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-top"> Quantity </label>
                        <div class="col-sm-9">
                            <input ng-model="Product.Quantity" type="text" id="form-field-6" placeholder="Quantity">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-sm-6 control-label no-padding-top"> Stock In Hand </label>
                                <div class="col-sm-3">
                                    <input ng-model="Product.StockInHand" type="text" id="form-field-6" placeholder="Stock In Hand">
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-top"> Re Order Level </label>
                                <div class="col-sm-3">
                                    <input ng-model="Product.Reorderlevel" type="text" id="form-field-6" placeholder="Re Order Level">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-info" type="button" ng-click="addProduct()">
                                <i class="ace-icon fa fa-check bigger-110"></i>
                                Submit
                            </button>

                            &nbsp; &nbsp; &nbsp;
                            <button class="btn" type="reset">
                                <i class="ace-icon fa fa-undo bigger-110"></i>
                                Reset
                            </button>
                        </div>
                    </div>
                </form>
                <!-- PAGE CONTENT ENDS -->
            </div><!-- /.col -->
        </div>
    </div>
<script type="text/javascript">
    $(function () {
        $('.select2').select2({ allowClear: true });
        $('.select2').css('width', '200px').select2({ allowClear: true });
        $('#menu-measure-main').syncMenu([{ name: "products", option: "o", }], { title: 'Products', link: '/Products' });
    });
</script>