@{ Layout = null; }
<div ng-controller="ProductListCtrl">
    <a href="#/Create/" class="btn btn-white btn-info btn-bold">
        <i class="ace-icon fa glyphicon-plus bigger-120 blue"></i>
        New Product
    </a>
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>Vendor</th>
            <th></th>
        </tr>
        <tr ng-repeat="item in items">
            <td>{{item.ProductId}}</td>
            <td>{{item.Name}}</td>
            <td>{{item.ProductType.Type}} {{item.ProductType.StockAs}}</td>
            <td>{{item.Vendor.Name}}</td>
            <td>
                <div class="hidden-sm hidden-xs btn-group">
                    <a class="btn btn-xs btn-info" href="#/Edit/{{item.ProductId}}"><i class="ace-icon fa fa-pencil bigger-120"></i></a>
                    <button class="btn btn-xs btn-danger" ng-click="delete(item.ProductId)"><i class="ace-icon fa fa-trash-o bigger-120"></i></button>
                </div>
            </td>
        </tr>
    </table>
</div>